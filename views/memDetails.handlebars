

<h1><a href="/admins"> Admin Page </a> | <a href="/goats"> Add Goats </a> | <a href="/memDetails">Members List</a></h1>

	<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>
    </div>



    <div class="container-fluid">
      <h2> Members List </h2>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

          <form action="/members" method="post">
            <div class="form-group">
              <label for="member_name"> Member Name </label>
              <input type="text" class="form-control" name="member_name" placeholder="Otto von Bismarck">
              <p class="help-block">What do people call you?</p>
            </div>

            <div class="form-group">
              <label for="credit_card"> Credit Card Details </label>
              <input type="text" class="form-control" name="credit_card" placeholder="Otto von Bismarck">
              <p class="help-block">What is your credit card number?</p>
            </div>

            <div class="form-group">
              <label for="address"> Address </label>
              <input type="text" class="form-control" name="address" placeholder="Otto von Bismarck">
              <p class="help-block">Where will you goat be shipped?</p>
            </div>

              <button class="btn btn-success btn-xs" type="submit">Submit </button>
            </div>
          </form>


        </div>
        <div class="col-md-2"></div>
      </div>
    </div>
		<div class="container">
      <h2> Members List </h2>
      <table class="table table-hover">
        <thead>
            <tr>
               <th> Name </th>
               <th> Credit Card</th>
               <th> Address </th>
            </tr>
        </thead>
        <tbody>
            {{#each members}}
            <tr>
                <td>{{this.member_name}}</td>
                <td>{{credit_card}}</td>
                <td>{{address}}</td>
            </tr>
            {{/each}}
        </tbody>
    	</table>
		</div>

<script type="text/javascript" src="assets/js/goatsCat.js"></script>
