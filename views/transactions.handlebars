<div class="container">
            {{#each goats}}
                <h3> Selected Goat </h3>
                <p> Id : {{id}}</p>
                <p> Name : {{goat_name}}</p>
                <p> price : {{goat_price}} </p>
                <img src= {{picture_url}} width="100px" height="100px">
                <div id="goatId" value={{id}} type="hidden"> </div>
            {{/each}}

<!-- /////////////////////////////////////////////////////////////////////////////// -->

          <div id="enterMember">

          <h1> Add Member Details </h1>

          <form action="/transactions" method="post">
            <div class="form-group">
              <label for="member_name"> Member Name </label>
              <input type="text" class="form-control" name="member_name" placeholder=" Donald Trump" id="enName">
              <p class="help-block">What is your name ?</p>
            </div>

            <div class="form-group">
              <label for="credit_card"> Credit Card Details </label>
              <input type="text" class="form-control" name="credit_card" placeholder="45813678256" id="enCredit">
              <p class="help-block">What is the number of your credit card ?</p>
            </div>

            <div class="form-group">
              <label for="address"> Address </label>
              <input type="text" class="form-control" name="address" placeholder="White House" id="enAdd">
              <p class="help-block">Address ?</p>
            </div>

            <button class="btn btn-success btn-xs" type="submit" id ="memberSubmit">Add Details</button>
          </form>

        </div>

<!-- /////////////////////////////////////////////////////////////////////////////// -->

        <div id="memberData">
            Shipping Name : <div id="adName"></div>
            Credit Card Number : <div id="adCredit"></div>
            Address : <div id = "adAdd"></div>

          <form action="/transDone" method="post">
            <input type="hidden" name=UserId id="Uid">
            <input type="hidden" name=MemId id="Mid">
            <input type="hidden" name=GoatId id="Gid">
            <button class="btn btn-success btn-xs" type="submit" id ="transSubmit">Finalize the Transaction</button>
          </form>
        </div>

</div>
<!-- /////////////////////////////////////////////////////////////////////////////// -->

        <script type="text/javascript">

        $(document).ready(function(){
            $("#memberData").hide();
            $("#memberSubmit").on("click",function(){
                console.log("Member Data Submitted");
                $("#memberData").show();
                $("#enterMember").hide();
                $("#adName").text($("#enName").val());
                $("#adCredit").text($("#enCredit").val());
                $("#adAdd").text($("#enAdd").val());
